#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# config
OPENEJB_VERSION="4.5.1"
TOMEE_VERSION="1.5.1"

BIN_DIR=$(dirname $0)
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

curl --silent --location http://heroku-jvm-common.s3.amazonaws.com/jvm-buildpack-common.tar.gz | tar xz
. bin/java

echo "java.runtime.version=1.7" > ${BUILD_DIR}/system.properties

logger -p user.notice -t "slugc[$$]" "language_pack_java download_jdk"
LOGGER_FLAGS="$LOGGER_FLAGS download_jdk"
javaVersion=$(detect_java_version ${BUILD_DIR})
echo -n "-----> Installing OpenJDK ${javaVersion}..."
install_java ${BUILD_DIR} ${javaVersion}
jdk_overlay ${BUILD_DIR}
echo "done"

# include .files when moving things around
shopt -s dotglob

cd $BUILD_DIR

TOMEE_URL="http://www.trieuvan.com/apache/openejb/openejb-$OPENEJB_VERSION/apache-tomee-$TOMEE_VERSION-webprofile.tar.gz"
echo "-----> Bundling TomEE version $TOMEE_VERSION"
curl --silent --location "$TOMEE_URL" | tar xz

cat >>boot.sh <<EOF
mvn package
mv ~/target/*.war ~/apache-tomee-webprofile-$TOMEE_VERSION/webapps/ROOT.war
~/apache-tomee-webprofile-$TOMEE_VERSION/bin/catalina.sh run
EOF

chmod +x boot.sh

# clean the cache
rm -rf $CACHE_DIR
