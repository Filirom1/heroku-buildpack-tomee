#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# config
OPENEJB_VERSION="4.5.1"
TOMEE_VERSION="1.5.1"

BIN_DIR=$(dirname $0)
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

curl --silent --location http://heroku-jvm-common.s3.amazonaws.com/jvm-buildpack-common.tar.gz | tar xz
. bin/java

echo "java.runtime.version=1.7" > ${BUILD_DIR}/system.properties

logger -p user.notice -t "slugc[$$]" "language_pack_java download_jdk"
LOGGER_FLAGS="$LOGGER_FLAGS download_jdk"
javaVersion=$(detect_java_version ${BUILD_DIR})
echo -n "-----> Installing OpenJDK ${javaVersion}..."
install_java ${BUILD_DIR} ${javaVersion}
jdk_overlay ${BUILD_DIR}
echo "done"

# install maven with base repository
MAVEN_URL="http://s3.amazonaws.com/heroku-jvm-langpack-java/maven.tar.gz"

echo -n "-----> Installing Maven 3.0.3..."
curl --silent --max-time 60 --location $MAVEN_URL | tar xz
chmod +x .maven/bin/mvn
echo " done"

MAVEN_SETTINGS_URL="http://s3.amazonaws.com/heroku-jvm-langpack-java/settings.xml"

echo -n "-----> Installing settings.xml..."
if [ -f .m2/settings.xml ]; then
  rm .m2/settings.xml 
fi
curl --silent --max-time 10 --location $MAVEN_SETTINGS_URL --output .m2/settings.xml
echo " done"

# change to build dir to run maven
cd $BUILD_DIR

export MAVEN_OPTS="-Xmx512m"

# build app
BUILDCMD="$BUILD_DIR/.maven/bin/mvn -B -Duser.home=$BUILD_DIR -Dmaven.repo.local=$BUILD_DIR/.m2/repository -s $BUILD_DIR/.m2/settings.xml -DskipTests=true clean install package"
echo "-----> executing $BUILDCMD"

$BUILDCMD 2>&1 | sed -u 's/^/       /'

if [ "${PIPESTATUS[*]}" != "0 0" ]; then
  echo " !     Failed to build app with Maven"
  exit 1
fi

# include .files when moving things around
shopt -s dotglob

cd $BUILD_DIR

TOMEE_URL="http://www.trieuvan.com/apache/openejb/openejb-$OPENEJB_VERSION/apache-tomee-$TOMEE_VERSION-webprofile.tar.gz"
echo "-----> Bundling TomEE version $TOMEE_VERSION"
curl --silent --location "$TOMEE_URL" | tar xz
ln -s $BUILD_DIR/apache-tomee-webprofile-$TOMEE_VERSION $BUILD_DIR/tomee


cat >>boot.sh <<EOF
set -i "s/8080/$PORT/g" ~/tomee/server.xml
mv ~/target/*.war ~/tomee/webapps/ROOT.war
~/tomee/bin/catalina.sh run
EOF

chmod +x boot.sh

# clean the cache
rm -rf $CACHE_DIR
